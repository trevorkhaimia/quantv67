# Copy to .env and fill in your values
# bun will auto-load .env files

# Required: OpenRouter API key for LLM calls
OPENROUTER_API_KEY=sk-or-your-key-here

# Required: Solana RPC (use a paid one like Helius/Quicknode for speed)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Wallet private key (Base58). Leave empty for scan-only mode.
# ⚠️ USE A DEDICATED TRADING WALLET — NEVER YOUR MAIN WALLET
WALLET_PRIVATE_KEY=

# Optional: Override default LLM model
LLM_MODEL=deepseek/deepseek-chat

# Optional: Server port
PORT=3000
